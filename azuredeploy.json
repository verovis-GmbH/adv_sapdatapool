{
  "contentVersion": "1.0.0.0",
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "apiProfile": "2018-06-01-profile",
  "parameters": {

    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]" ,
      "metadata": {
        "description": "Location of the data factory."
      } 
    },
    "ResourceGroupName": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]",
            "metadata": {
               "description": "name of the resourcegroup to deploy "
                        }
        },
        
    "DeploymentPhase": {
      "type": "string",
      "defaultValue": "Phase1",
      "allowedValues": ["Phase1","Phase2"],
      "metadata": {
        "description": "Phase1=Resource Deployment, Phase2=Content Deployment "
      }
    },
    "ResourceNamePrefix": {
      "type": "string",
      "defaultValue": "verovistest",
      "metadata": {
        "description": "MUST BE LOWERCASE! prefix is used for naming storage account, and ADF name "
      }
    },

"SAPServer": {
      "type": "string",
       "defaultValue": "localhost",
      "metadata": {
        "description": "hostname or ip adress of sap system "
				}
	},
	"SAPUsername": {
      "type": "string",
       "defaultValue": "mySAPSvcUser",
      "metadata": {
        "description": "sap or SSO-sap username to logon to azure"
				}
	}, 
	"SAPPassword": {
      "type": "secureString",
      "metadata": {
        "description": "password for sap connect via sapuser"
				}
	},	  
    "SAPSystemNo": {
      "type": "string",
	  "defaultValue": "00",
      "metadata": {
        "description": "system number used to connect sap"
				}
	},
	"SAPClientId": {
      "type": "string",
	  "defaultValue": "100",
      "metadata": {
        "description": "sap client id used to connect sap"
				}
	}, 
	"SAPLanguage": {
      "type": "string",
	  "defaultValue": "EN",
      "metadata": {
        "description": "2digit language code to be used to connect sap"
				}
	},
    
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS"
    },


    "onPremSqlServerConnectionString": {
      "type": "string",
      "defaultValue": "data source=pbi\\SQL2017;initial Catalog=TestDB",
      "metadata": {
        "description": "Connnection string for the on-premsies SQL Server database."
      }
    }
   
   
  },
  "variables": {
    "deploymentname": "pid-e3e28575-363b-580a-8ae5-0fee9aa57183",
      "storageAccountName": "[toLower(concat(parameters('ResourceNamePrefix'), '',uniqueString(resourceGroup().id)))]",
      "storageResId": "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]",
   
    
    "storageAccountApiVersion":"2019-06-01",
    "adfName": "[toLower(concat(parameters('ResourceNamePrefix'), '',uniqueString(resourceGroup().id)))]",
    "adfId": "[concat('Microsoft.DataFactory/factories/', variables('adfName'))]",
    "adfLinkedServiceNameBlobStorage": "conAzureBlob",
    "adfLinkedServiceNameAzureSQL": "conAzureSQLDB",
    "adfLinkedServiceNameSAP": "conSAP",
    "adfselfHostedIRName": "SelfHostedIRSAP",
    
    "deployStorage"         : "[equals('Phase1',parameters('DeploymentPhase'))]",
    "deployADF"             : "[equals('Phase1',parameters('DeploymentPhase'))]",
    "deployADF_IR"          : "[equals('Phase1',parameters('DeploymentPhase'))]",
    "deployADFLinkedSvcBlob": "[equals('Phase1',parameters('DeploymentPhase'))]",
    "deployADFLinkedSvcSAP" : "[equals('Phase2',parameters('DeploymentPhase'))]",
    "deployADFLinkedSvcSQL" : false,
    "deployADFDatasetsDST"  : "[equals('Phase2',parameters('DeploymentPhase'))]",
    "deployADFDatasetsSRC"  : "[equals('Phase2',parameters('DeploymentPhase'))]",
    "deployADFPipelines"    : "[equals('Phase2',parameters('DeploymentPhase'))]" 
	
  },
  "resources": [
    {
      "apiVersion": "2019-05-01",
			"name": "pid-e3e28575-363b-580a-8ae5-0fee9aa57183", 
			"type": "Microsoft.Resources/deployments",
      "resourceGroup": "[parameters('ResourceGroupName')]",
      "properties": {
        "mode": "incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
                
          ]
          , "outputs": { 
            "storageAccountName":{ "type":"string","value": "[variables('storageAccountName')]"},
          "InfoText":{ "type":"string","value": "Subscript executed!!!!!"}
             }
        }
      },
      "resources": [
          {
                 "type": "Microsoft.Storage/storageAccounts",
                 "name": "[variables('storageAccountName')]",
                  "condition": "[variables('deployStorage') ]",
                 "apiVersion": "2019-06-01",  
                 "dependsOn": [
                          "[variables('deploymentname')]" 
                    ],
                 "location": "[parameters('location')]",
                 "sku": {   "name": "[parameters('storageAccountType')]"  },
                 "kind": "Storage",
                 "properties": {}
                  }
                  ,
        {
          "name": "[variables('adfName')]",
          "condition": "[variables('deployADF')]",
          "apiVersion": "2018-06-01",
          "type": "Microsoft.DataFactory/factories",
          "location": "[parameters('location')]",
          "properties": {},
          "dependsOn": [
            "[variables('deploymentname')]" 
          ],
          "resources": [
            {
              "type": "linkedservices",
              "name": "[variables('adfLinkedServiceNameBlobStorage')]",
              "condition": "[variables('deployADFLinkedSvcBlob') ]",
              "dependsOn": [
                "[variables('adfName')]",
                "[variables('storageResId')]" 
              ],
              "apiVersion": "2018-06-01",
              "properties": {
                "type": "AzureStorage",
                "description": "Azure Storage linked service",
                "typeProperties": {
                  "connectionString": {
                    "value":"[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageResId'), variables('storageAccountApiVersion')).keys[0].value )]",
                    "type": "SecureString"
                  }
                }
              }
              
            },
            {
              "name": "[variables('adfselfHostedIRName')]",
              "type": "integrationRuntimes",
              "condition": "[variables('deployADF_IR') ]",
              "apiVersion": "2018-06-01",
              "properties": {
                "type": "SelfHosted"
              },
              "dependsOn": [
                "[variables('adfName')]"
              ]
            },
      {
            "name": "[variables('adfLinkedServiceNameSAP')]",
            "type": "linkedServices",
             "condition": "[variables('deployADFLinkedSvcSAP')]",
            "apiVersion": "2018-06-01",
            "properties": {
                "annotations": ["connection to onprem SAP system"],
                "type": "SapTable",
                "typeProperties": {
                    "clientId": "[parameters('SAPClientId')]",
                    "language": "[parameters('SAPLanguage')]",
                    "sncMode": false,
                    "userName": "[parameters('SAPUsername')]",
                    "password": {
                        "type": "SecureString",
                        "value": "[parameters('SAPPassword')]"
                    },
                    "server": "[parameters('SAPServer')]",
                    "systemNumber": "[parameters('SAPSystemNo')]"


                },
                "connectVia": {
                    "referenceName": "[variables('adfselfHostedIRName')]",
                    "type": "IntegrationRuntimeReference"
                }
            },
            "dependsOn": [
                 "[variables('adfName')]",
                "[variables('adfselfHostedIRName')]"
            ]
        },
            {
              "name": "[variables('adfLinkedServiceNameAzureSQL')]",
              "type": "linkedServices",
              "condition": "[variables('deployADFLinkedSvcSQL')]",
              "apiVersion": "2018-06-01",
              "properties": {
                "type": "SqlServer",
                "typeProperties": {
                  "connectionString": {
                    "type": "SecureString",
                    "value": "[parameters('onPremSqlServerConnectionString')]"
                  }
                },
                "connectVia": {
                  "referenceName": "[variables('adfselfHostedIRName')]",
                  "type": "IntegrationRuntimeReference"
                }
              },
              "dependsOn": [
                "[variables('adfName')]",
                "[variables('adfselfHostedIRName')]"
              ]
            },
      {
            "name":  "[concat( variables('adfName'), '/DestinationDataset_BSEG')]",
            "type": "Microsoft.DataFactory/factories/datasets",
              "condition": "[variables('deployADFDatasetsDST')]",
            "apiVersion": "2018-06-01",
            "properties": {
                "linkedServiceName": {
                    "referenceName": "[variables('adfLinkedServiceNameBlobStorage')]",
                    "type": "LinkedServiceReference"
                },
                "annotations": ["target dataset to store data"],
                "type": "DelimitedText",
                "typeProperties": {
                    "location": {
                        "type": "AzureBlobStorageLocation",
                        "fileName": "BSEG_LK",
                        "folderPath": "input",
                        "container": "playground"
                    },
                    "columnDelimiter": ",",
                    "escapeChar": "\\",
                    "quoteChar": "\""
                } 
            },
             "dependsOn": [
                "[variables('adfName')]",
                "[variables('adfLinkedServiceNameBlobStorage')]"
              ]
        },
{
            "name": "[concat( variables('adfName'), '/SourceDataset_BSEG')]",
            "type": "Microsoft.DataFactory/factories/datasets",
              "condition": "[variables('deployADFDatasetsSRC')]",
            "apiVersion": "2018-06-01",
            "properties": {
                "linkedServiceName": {
                    "referenceName": "[variables('adfLinkedServiceNameSAP')]",
                    "type": "LinkedServiceReference"
                },
                "annotations": ["source dataset"],
                "type": "SapTableResource",
                "typeProperties": {
                    "tableName": "BSEG"
                }
            },
           "dependsOn": [
                "[variables('adfName')]",
                "[variables('adfLinkedServiceNameSAP')]"
              ]
        },
   {
            "name":"[concat( variables('adfName'), '/CopyPipeline_BSEG')]",
            "type": "Microsoft.DataFactory/factories/pipelines",
             "condition": "[variables('deployADFPipelines')]",
            "apiVersion": "2018-06-01",
            "properties": {
                "activities": [
                    {
                        "name": "Copy_BSEG",
                        "type": "Copy",
                        "policy": {
                            "timeout": "7.00:00:00",
                            "retry": 0,
                            "retryIntervalInSeconds": 30,
                            "secureOutput": false,
                            "secureInput": false
                        },
                        "userProperties": [
                            {
                                "name": "Source",
                                "value": "BSEG"
                            },
                            {
                                "name": "Destination",
                                "value": "playground/input/BSEG_LK"
                            }
                        ],
                        "typeProperties": {
                            "source": {
                                "type": "SapTableSource",
                                "partitionOption": "None"
                            },
                            "sink": {
                                "type": "DelimitedTextSink",
                                "storeSettings": {
                                    "type": "AzureBlobStorageWriteSettings"
                                },
                                "formatSettings": {
                                    "type": "DelimitedTextWriteSettings",
                                    "quoteAllText": true,
                                    "fileExtension": ".txt"
                                }
                            },
                            "enableStaging": false
                        },
                        "inputs": [
                            {
                                "referenceName": "SourceDataset_BSEG",
                                "type": "DatasetReference",
                                "parameters": {}
                            }
                        ],
                        "outputs": [
                            {
                                "referenceName": "DestinationDataset_BSEG",
                                "type": "DatasetReference",
                                "parameters": {}
                            }
                        ]
                    }
                ],
                "annotations": ["placeholder"]
            },
            "dependsOn": [
               "[variables('adfName')]",
               
               "[concat( variables('adfId'), '/datasets/SourceDataset_BSEG')]",
              "[concat( variables('adfId'), '/datasets/DestinationDataset_BSEG')]"
            ]
        } 
          ]
        }
      ]
    }
 
  ]
  ,"outputs": {
    "DeploymentPhase":{ "type":"string" ,"value":"[parameters('DeploymentPhase')]"} ,
     "StorageResId":{ "type":"string","value": "[variables('storageResId')]"} ,
"deployADF":{ "type":"bool" ,"value": "[variables('deployADF')]"} ,
"deployADF_IR":{ "type":"bool","value": "[variables('deployADF_IR')]"} ,
"deployADFLinkedSvcBlob":{ "type":"bool","value": "[variables('deployADFLinkedSvcBlob')]"} ,
"deployADFLinkedSvcSAP":{ "type":"bool","value": "[variables('deployADFLinkedSvcSAP')]"} ,
"deployADFLinkedSvcSQL":{ "type":"bool","value": "[variables('deployADFLinkedSvcSQL')]"} ,
"deployADFDatasetsSRC":{ "type":"bool","value": "[variables('deployADFDatasetsSRC')]"} ,
"deployADFDatasetsDST":{ "type":"bool","value": "[variables('deployADFDatasetsDST')]"} ,
"deployADFPipelines":{ "type":"bool","value": "[variables('deployADFPipelines')]"} 
     
    }
}